<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.photofactory.photofactorygame.LoginActivity"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:elevation="0dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="59dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Find. Snap. Win."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold|italic"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:background="@drawable/button_primary"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:padding="15dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/signin_password"
        android:layout_alignLeft="@+id/signin_password"
        android:layout_alignStart="@+id/signin_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/signin_email"
        style="@style/Widget.AppCompat.EditText"
        android:background="@drawable/button_default"
        android:textColor="@android:color/white"
        android:paddingLeft="15sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/signin_password"
        android:layout_alignStart="@+id/signin_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signin_password"
        android:layout_marginTop="76dp"
        android:background="@drawable/button_default"
        android:textColor="@android:color/white"
        android:paddingLeft="15sp"
        android:layout_alignTop="@+id/signin_email"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
